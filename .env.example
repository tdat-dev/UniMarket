# ============================================
# ZOLDIFY - Environment Configuration
# ============================================
# Copy file này thành .env và điền thông tin
# cp .env.example .env
# ============================================

# ================== APPLICATION ==================
APP_NAME=Zoldify
APP_ENV=local                    # local | staging | production
APP_DEBUG=true                   # true | false (false khi production)
APP_URL=http://localhost:8000    # URL chính của app

# ================== TIMEZONE ==================
APP_TIMEZONE=UTC                    # Timezone lưu trong DB (luôn là UTC)
DISPLAY_TIMEZONE=Asia/Ho_Chi_Minh   # Timezone hiển thị cho user

# ================== DATABASE (MySQL) ==================
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=zoldify               # Tên database
DB_USERNAME=root                  # Username MySQL
DB_PASSWORD=                      # Password MySQL (để trống nếu dùng Laragon mặc định)

# ================== MAIL (SMTP) ==================
# Dùng để gửi email xác thực, thông báo
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=                    # Email Gmail của bạn
MAIL_PASSWORD=                    # App Password (không phải password Gmail thường)
MAIL_FROM_ADDRESS=noreply@zoldify.com
MAIL_FROM_NAME="${APP_NAME}"
MAIL_ENCRYPTION=tls

# ================== FIREBASE ==================
# Đăng nhập bằng Google qua Firebase (không cần verify app)
# Lấy từ: Firebase Console → Project Settings → General → Your apps
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=
FIREBASE_MEASUREMENT_ID=

# ================== REDIS (Optional) ==================
# Dùng để cache, tăng tốc độ
# Nếu không có Redis, hệ thống sẽ dùng Session cache
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=                   # Để trống nếu không có password

# ================== SOCKET.IO (Chat Server) ==================
# Cấu hình cho real-time chat
SOCKET_URL=http://localhost:3001  # URL của Socket.IO server
SOCKET_PORT=3001                  # Port chạy Socket server

# ================== PAYOS (Payment Gateway) ==================
# Đăng ký tại: https://payos.vn
# Lấy credentials từ: https://my.payos.vn
PAYOS_CLIENT_ID=                  # Client ID từ PayOS
PAYOS_API_KEY=                    # API Key từ PayOS
PAYOS_CHECKSUM_KEY=               # Checksum Key để verify signature

# URLs callback từ PayOS
PAYOS_RETURN_URL=${APP_URL}/payment/return
PAYOS_CANCEL_URL=${APP_URL}/payment/cancel

# ================== ESCROW (Giữ tiền) ==================
# Thời gian thử hàng theo condition sản phẩm (ngày)
ESCROW_TRIAL_DAYS_NEW=7           # Hàng mới 100%
ESCROW_TRIAL_DAYS_LIKE_NEW=5      # Như mới 99%
ESCROW_TRIAL_DAYS_GOOD=3          # Tốt 90%
ESCROW_TRIAL_DAYS_FAIR=2          # Khá 80%

# Phí sàn (% trên mỗi giao dịch, 0 = miễn phí)
PLATFORM_FEE_PERCENT=0

# Số tiền tối thiểu để rút (VND)
MIN_WITHDRAWAL_AMOUNT=100000

# ================== GHN (Giao Hang Nhanh) ==================
# Đăng ký tại: https://khachhang.ghn.vn
# API Docs: https://api.ghn.vn/home/docs/detail
GHN_TOKEN=                        # Token từ GHN
GHN_SHOP_ID=                      # Shop ID đăng ký trên GHN
GHN_ENV=sandbox                   # sandbox | production